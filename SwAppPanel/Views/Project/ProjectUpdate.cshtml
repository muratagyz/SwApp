@model SwAppViewModel.Panel.ProjectVM

@using (Html.BeginForm("ProjectUpdate", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form form-group">
        @Html.Hidden("ID")
        @Html.HiddenFor(x => x.Id, new { @class = "form-control" })<br/>
        @Html.Label("Url")
        @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control" }) <br/>
        @Html.Label("Kategori")
        @Html.TextBoxFor(x => x.ProjectCategory, new { @class = "form-control" }) <br/>
        @Html.Label("Detay")
        @Html.TextAreaFor(x => x.ProjectDetails, new { @class = "ckeditor" }) <br/>
        @Html.Hidden("Oluşturma Tarihi")
        @Html.HiddenFor(x => x.CreatedDate, new { @class = "form-control" }) <br/>
        @Html.Hidden("Durumu")
        @Html.HiddenFor(x => x.Status, new { @class = "form-control" }) <br/>
        @Html.Label("Resim Url")<br/>
        @Html.TextBox("formFile", "", new { type = "file" }) <br/><br/>
        @Html.HiddenFor(x => x.ProjectImageUrl)
        <button class="btn btn-success">Güncelle</button>
    </div>
}