@model SwAppViewModel.Panel.PersonalVM

@using (Html.BeginForm("PersonalUpdate", "Personal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form form-group">
        @Html.Hidden("ID")
        @Html.HiddenFor(x => x.Id, new { @class = "form-control" })<br/>
        @Html.Label("Tam İsmi")
        @Html.TextBoxFor(x => x.PersonalFullName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PersonalFullName, "", new { @class = "text-danger" })<br/>
        @Html.Label("Pozisyon")
        @Html.TextBoxFor(x => x.PersonalPosition, new { @class = "form-control" }) <br/>
        @Html.ValidationMessageFor(x => x.PersonalPosition, "", new { @class = "text-danger" })<br/>
        @Html.Label("Resim Url")<br/>
        @Html.TextBox("formFile", "", new { type = "file" }) <br/><br/>
        @Html.Hidden("Oluşturma Tarihi")
        @Html.HiddenFor(x => x.CreatedDate, new { @class = "form-control" }) <br/>
        @Html.Hidden("Durumu")
        @Html.HiddenFor(x => x.Status, new { @class = "form-control" }) <br/>
        @Html.HiddenFor(x => x.PersonalImageUrl)
        <button class="btn btn-success">Güncelle</button>
    </div>
}