@model SwAppViewModel.Panel.AboutSubTableVM

@using (Html.BeginForm("AboutSubTableUpdate", "AboutSubTable", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form form-group">
        @Html.Hidden("ID")
        @Html.HiddenFor(x => x.Id, new { @class = "form-control" })<br/>
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.AboutSubTableTitle, new { @class = "form-control" }) <br/>
        @Html.Label("Detay")
        @Html.TextAreaFor(x => x.AboutSubTableDetails, new { @class = "ckeditor" }) <br/>
        @Html.Hidden("Oluşturma Tarihi")
        @Html.HiddenFor(x => x.CreatedDate, new { @class = "form-control" }) <br/>
        @Html.Hidden("Durumu")
        @Html.HiddenFor(x => x.Status, new { @class = "form-control" }) <br/>
        @Html.Label("Resim Url")<br/>
        @Html.TextBox("formFile", "", new { type = "file" }) <br/><br/>
        @Html.HiddenFor(x => x.AboutSubTableImageUrl)
        <button class="btn btn-success">Güncelle</button>
    </div>
}